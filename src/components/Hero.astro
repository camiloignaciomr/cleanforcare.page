---
import Button from './Button.astro';
---

<section class="relative pt-32 pb-20">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-gradient-to-b from-blue-50/90 to-white"></div>
    <img 
      src="https://images.unsplash.com/photo-1581578731548-c64695cc6952?auto=format&fit=crop&q=80" 
      alt="Clean home interior" 
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
        Professional Cleaning Services<br />
        <span class="text-primary">For Your Home & Family</span>
      </h1>
      <p class="text-xl text-gray-800 mb-8 max-w-2xl mx-auto">
        Expert cleaning solutions for homes and elderly care. Experience the difference with our professional and caring service.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/contact">
          Get a Quote
        </Button>
        <a 
          href="/services" 
          class="bg-white text-primary px-8 py-2 rounded-full text-lg font-medium border-2 border-primary hover:bg-gray-50 transition-colors"
        >
          Our Services
        </a>
      </div>
    </div>
  </div>
</section>