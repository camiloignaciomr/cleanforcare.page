---
import Logo from './Logo.astro';
import Button from './Button.astro';
import MobileMenu from './MobileMenu.astro';

const menuItems = [
  { href: "/", text: "Home" },
  { href: "/about", text: "About" },
  { href: "/services", text: "Services" },
  { href: "/contact", text: "Contact" },
];

let isOpen = false;

function toggleMenu() {
  isOpen = !isOpen;
}
---

<header class="fixed w-full bg-white/95 backdrop-blur-sm z-50 border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <a href="/" class="flex items-center">
        <Logo />
      </a>

      <nav class="hidden md:flex space-x-8">
        {menuItems.map(item => (
          <a href={item.href} class="text-gray-700 hover:text-primary font-medium">
            {item.text}
          </a>
        ))}
      </nav>

      <div class="flex items-center space-x-4">
        <a href="tel:0430368626" class="hidden md:block text-gray-700 hover:text-primary">
          0430 368 626
        </a>
        <Button href="https://forms.zohopublic.com.au/camiloignaciomrgm1/form/ServiceOrderForm/formperma/d8e5IwGnw9t7-4A6k08DPYttsh6UEweku2nGy_sBcxs">
          Get Quote
        </Button>
        <button 
          id="menu-toggle"
          class="md:hidden text-gray-500 hover:text-primary"
          aria-label="Toggle menu"
          on:click={toggleMenu}
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <MobileMenu {menuItems} {isOpen} data-mobile-menu />   
</header>