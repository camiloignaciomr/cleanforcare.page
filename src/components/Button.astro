---
import '../styles/button.css';

interface Props {
  href: string;
  className?: string;
}

const { href, className = "" } = Astro.props;
---

<a 
  href={href} 
  class={`shine-button bg-primary text-white px-6 py-2 rounded-full hover:bg-primary/90 transition-colors ${className}`}
>
  <slot />
</a>